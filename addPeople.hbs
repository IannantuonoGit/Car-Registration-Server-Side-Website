      <div class="row">
            <div class="col-md-12">
        
                <h2>Add People</h2>
                <br>
                <form action="/people/add" method="post">
                    <fieldset>
                        <legend>Personal Information</legend>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="first_name">First Name:</label>
                                    <input name="first_name" class="form-control" id="first_name" type="text">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="last_name">Last Name:</label>
                                    <input name="last_name" class="form-control" id="last_name" type="text">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="phone">Phone:</label>
                                    <input name="phone" class="form-control" id="phone" type="tel">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="address">Address (Street):</label>
                                    <input name="address" class="form-control" id="address" type="text">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label for="city">Address (City):</label>
                                <input name="city" class="form-control" id="city" type="text">
                            </div>
                        </div>
                    </fieldset>
        
                    <fieldset>
                        <legend>Car Information</legend>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="vin">Vin :</label>
                                    <input name="vin" class="form-control" id="vin" type="text">
                                </div>
                            </div>
                    </div></fieldset>
        
                    <hr>
        
                    <input class="btn btn-primary pull-right btn-primary" type="submit" value="Add Person"><br><br><br>
        
                </form>
            </div>
        </div>